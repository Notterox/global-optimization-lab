{
  "parser": "babel-eslint",
  "env": {
    "browser": true,
    "es6": true,
    "node": true
  },
  "extends": [
    "airbnb"
  ],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaFeatures": {
        "jsx": true
    },
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "plugins": [
    "react"
  ],
  "rules": {
    "key-spacing": ["error", { "mode": "minimum" } ],
    "comma-dangle": "off",
    "react/destructuring-assignment": "off",
    "react/prefer-stateless-function": "off",
    "object-curly-newline": "off"
  }
}
